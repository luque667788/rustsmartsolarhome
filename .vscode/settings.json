{
    "emmet.includeLanguages": {
        "rust": "html",
        "*.rs": "html"
      },
      "tailwindCSS.includeLanguages": {
          "rust": "html",
          "*.rs": "html"
      },
      "files.associations": {
          "*.rs": "rust"
      },
      "editor.quickSuggestions": {
        "other": "on",
        "comments": "on",
        "strings": true
      },
      "css.validate": false,
      "rust-analyzer.procMacro.ignored": {
        "leptos_macro": [
            // optional:
            // "component",
            "server"
        ],
    },
    "rust-analyzer.rustfmt.overrideCommand": [
        "leptosfmt",
        "--stdin",
        "--rustfmt"
    ],
    "rust-analyzer.cargo.features": [
        "ssr",
    ],
}
